generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String?
  password    String?
  avatar     String?
  role        String @default("user")
  phone       String?
  address     String?
  isVerified  Boolean @default(false)
  isAdmin     Boolean @default(false)

  products    Product[]
  productFiles ProductFile[]
  orders      Order[]
  medias Media[]
  reviews ProductReview[]
}

model Product {
  id              String       @id @default(cuid())
  userId          String
  user            User         @relation(fields: [userId], references: [id])
  name            String
  description     String?
  price           Float?
  category        String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  isPublished     Boolean      @default(false)
  isFeatured      Boolean      @default(false)
  approvedForSale String       @default("pending")
  stripeId        String?
  priceId         String?
  
  images          Image[]
  productFiles    ProductFile[]
  orders Order[]
  reviews ProductReview[]
}

model ProductFile {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  products Product[]
}

model ProductReview{
  id        String @id @default(cuid())
  userId    String
  user      User   @relation(fields: [userId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
}

model Order {
  id       String    @id @default(cuid())
  userId   String
  user     User      @relation(fields: [userId], references: [id])
  products Product[]
  isPaid   Boolean
}

model Media {
  id     String @id @default(cuid())
  mediaUrl    String?
  mediaType   String?
  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model Image {
  id        String @id @default(cuid())
  productId String
  product   Product @relation(fields: [productId], references: [id])
  url       String
}

